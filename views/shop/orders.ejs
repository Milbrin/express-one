    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>No order yet!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                    <li class="cart__item">
                        <h1># <%= order.id %></h1>
                        <ul>
                            <% order.products.forEach(product => { %>
                                <li><%= product.orderItem.quantity %> * <%= product.title %> = <%= product.orderItem.quantity*product.price %> â‚¬</li>
                            <% }); %>
                        </ul>
                    </li>
                    <% }) %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>